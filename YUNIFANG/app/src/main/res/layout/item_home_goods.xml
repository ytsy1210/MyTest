<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="150dp"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >
<ImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:id="@+id/imageView_home_item_goods"
    android:scaleType="centerCrop"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:minLines="2"
        android:id="@+id/textView_home_item_goodsName"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/textView_home_item_showPrice"
            android:textColor="#FF829C"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#7B866B"
            android:id="@+id/textView_home_item_marketPrice"
            android:text="asdfg"
            />
    </LinearLayout>


</LinearLayout>