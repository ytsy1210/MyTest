        android:layout_marginTop="15dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ViewPager_item4_home"
        android:clipChildren="false">

    </android.support.v4.view.ViewPager>
